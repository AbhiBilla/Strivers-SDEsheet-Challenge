#include <bits/stdc++.h> 
/****************************************************************

    Following is the class structure of the LinkedListNode class:

    template <typename T>
    class LinkedListNode
    {
    public:
        T data;
        LinkedListNode<T> *next;
        LinkedListNode(T data)
        {
            this->data = data;
            this->next = NULL;
        }
    };

*****************************************************************/

bool isPalindrome(LinkedListNode<int> *head) {
    int c=0;
    LinkedListNode<int> * tp = head;
    while(tp){
        c++;
        tp =  tp->next;
    }
    if(c==0 || c==1) return true;
    int s1=0,s2=0;
    tp=head;
    if(c%2!=0){
        int c1=1;
        while(tp){
           if (c1 <= c / 2) {
              s1 += tp->data;
            }
           if(c1>(c/2+1)){
              s2+=tp->data;
            }
            c1++;
            tp=tp->next;
        }  
    }
    else{
        int c2=1;
        while(tp){
          if(c2<=c/2){
             s1+=tp->data;
          } 
          else{
            s2+=tp->data;
          }
          c2++;
          tp=tp->next;
        }
    }
    if(s1==s2) return true;
    else return false;
}
